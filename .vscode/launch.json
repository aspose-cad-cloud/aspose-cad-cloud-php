    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            //"cwd": "${fileDirname}",
            "cwd": "${workspaceFolder}",
            "port": 9000,
            "runtimeExecutable": "C:\\PHP\\php.exe"
        },
        {
            "name": "Launch TEST currently open",
            "type": "php",
            "request": "launch",
            "args": [ "${workspaceFolder}\\vendor\\bin\\phpunit", "${file}" ],
            "cwd": "${workspaceFolder}",
            "port": 9000,
            "runtimeExecutable": "C:\\PHP\\php.exe"
        }
    ]
}